<%= render 'esimies_shared/vasenpalkki' %>
<div class="span8">
	<div class="row-fluid">
		<div class="span3">
			<%= link_to image_tag("kokonaismyynti_pieni.jpg" , :alt => "Kokonaismyynti", :mouseover => "kokonaismyynti_pieni_hover.JPG"), kokonaismyynti_path %>
		</div>
		<div class="span3">
			<%= link_to image_tag("myyntiryhmat_pieni.jpg" , :alt => "Myyntiryhmät", :mouseover => "myyntiryhmat_pieni_hover.JPG"), myyntiryhmat_path %>
		</div>		
		<div class="span3">	
			<%= link_to image_tag("kontaktit_pieni.jpg" , :alt => "Kontaktit", :mouseover => "kontaktit_pieni_hover.JPG"), kontaktit_path %>			
		</div>
		<div class="span3">
			<%= link_to image_tag("paalinkki_kilpailut.JPG" , :alt => "Kilpailut")%>
		</div>		
	</div>
	<div class="row-fluid">
		<div class="span3">
			<% if @competitions.empty? %>
			<p>Meneillään olevia kilpailuja ei ole. Siirry luomaan kilpailuja <%= link_to "täältä.", competitions_new_path %></p>
			<% else %>
			<div id="kilpailuvalinta">
				<%= render 'kilpailuvalinta' %>
			</div>
			<% end %>
			<% if !@old_competitions.empty?%>
			<div id="kilpailuvalinta2">
				<%= render 'kilpailuvalinta2'%>				
			</div>
			<% end %>
		</div>
		<div class="span9">
			<% if !@show_competition.nil? %>
			<div class="row-fluid">				
				<div id="kilpailutaulu">
					<%= render 'kilpailutaulu' %>
				</div> 
			</div>
			<% end %>
		</div>
	</div>	
	<div class="row-fluid">
		<% if !@show_competition.nil? %>
		<div class="span6" id="saannot">
			<%= render 'saannot' %>
		</div>
		<div class="span6" id="palkinnot">
			<%= render 'palkinnot'%>
		</div>
		<% end %>
		<p>Uuden kilpailun voit luoda <%= link_to "täältä.", competitions_new_path %></p>
	</div>	
</div>
<div class="span2">
<%= render 'esimies_shared/oikeapalkki' %>
</div>
<script type="text/javascript">
  $('#kilpailuvalinta').change(function(){
  	$('#kilpailuvalinta_formi').submit()
  });
  $('#kilpailuvalinta2').change(function(){
  	$('#kilpailuvalinta_formi2').submit()
  });
</script>

