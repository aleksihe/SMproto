<%= render 'esimies_shared/vasenpalkki' %>
<div class="span8">
	<div class="row-fluid">
		<div class="span5">
			<%= image_tag "paalinkki_myyntiryhmat.JPG" , :alt => "Myyntiryhmät"%>
		</div>
		<div class="span7">
			<%= link_to image_tag("kilpailut_pieni.jpg" , :alt => "Myyntiryhmät", :mouseover => "kilpailut_pieni_hover.JPG"), kilpailut_path %>
			<%= link_to image_tag("kokonaismyynti_pieni.jpg" , :alt => "Kokonaismyynti", :mouseover => "kokonaismyynti_pieni_hover.JPG"), kokonaismyynti_path %>
			<%= image_tag "placeholder_pieni.jpg" , :alt => "placeholder"%>
		</div>		
	</div>
	<div class="row-fluid">
		<div class="span2">
			<%= form_tag('/myyntiryhmat') do %>
				<%= select_tag "salegroup_id", options_from_collection_for_select(@salegroups,"id", "nimi", @salegroup.id),  
				:include_blank => true,  
				:onchange => "this.form.submit();",
				:class => 'input-medium' %>	
			<% end %>
		</div>
		<div class="span2">
		</div>
		<div class="span2">
		</div>
		<div class="span2">
		</div>
		<div class="span2">
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8">
			<% if @myyjat.any? %>
				<table class="table table-condensed table-bordered table-pieni">
					<colgroup>
			          <col class="span1">
			          <col class="span1">
			          <col class="span1">
			          <col class="span1">
			          <col class="span1">
			          <col class="span1">		         
			        </colgroup>
					<thead>
						<tr>
							<th>Myyjä</th><th>Myynti €</th><th>Kontaktit/pv</th><th>Pull %</th><th>Provisio €</th><th></th>
						</tr>	
					</thead>
					<% @myyjat.each do |myyja| %>
						<tr>
							<td><%= myyja.nimi %></td>
							<td><%= myyja.sales_month %></td>				
							<td><%= myyja.contacts_avg %></td>
							<td><%= myyja.pull_month %></td>
							<td><%= myyja.provisio_month %></td>				
							<td></td>
						</tr> 
					<% end %>			
				</table>
				<% end %>
		</div>
		<div class="span4">
		</div>
	</div>
</div>
<div class="span2">
<%= render 'esimies_shared/oikeapalkki' %>
</div>
