<%= render 'esimies_shared/vasenpalkki' %>
<div class="span8">
	<div class="row-fluid">
		<div class="span5">
			<%= image_tag "paalinkki_myyntiryhmat.JPG" , :alt => "Myyntiryhmät"%>
		</div>
		<div class="span7">
			<%= link_to image_tag("kilpailut_pieni.jpg" , :alt => "Myyntiryhmät", :mouseover => "kilpailut_pieni_hover.JPG"), kilpailut_path %>
			<%= link_to image_tag("kokonaismyynti_pieni.jpg" , :alt => "Kokonaismyynti", :mouseover => "kokonaismyynti_pieni_hover.JPG"), kokonaismyynti_path %>
			<%= image_tag "placeholder_pieni.jpg" , :alt => "placeholder"%>
		</div>		
	</div>
	<div class="row-fluid">
		<div class="span3">	
			<div id="ryhmavalinta_form">		
			<%= render 'esimies_shared/ryhmavalinta'%>	
			</div>			
		</div>
		<div id="aikavalinta">		
			<%= render 'esimies_shared/aikavalinta' %>	
		</div>
		<div class="span2">
		</div>
		<div class="span2">
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8">		
			<div id="myyjataulu">
				<% if @myyjat.any? %>
				<%= render 'esimies_shared/myyjataulu' %>
				<% end %>		
			</div>		
		</div>
		<div class="span4">
		</div>
	</div>
</div>
<div class="span2">
<%= render 'esimies_shared/oikeapalkki' %>
</div>
<script type="text/javascript">
  $('#ryhmavalinta').change(function(){
  	$('#ryhmavalinta_formi').submit()
  });
</script>
