
<%= render 'myyja_shared/vasenpalkki' %>
<div class="span10">
	<div class="row">
		<div class="span3 offset1">
			<%= image_tag "myynti_iso.JPG" %>
		</div>
		<div class="span2">
			<%= link_to image_tag("kilpailut_pieni.jpg", :mouseover => "kilpailut_pieni_hover.JPG"), '#' %>
		</div>
		<div class="span2">
			<%= image_tag "myyja_placeholder_pieni.jpg" %>
		</div>
		<div class="span3">
			<%= render 'myyja_shared/oikeapalkki'%>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<div class="myyntipv">
				<div class="row">
					<h3>Tänään</h3><br />
				</div>
				<div class="row-fluid">					
					<div class="span4" id="myynti" style="width:84px; height:300px">
					</div>
					<div class="span4" id="kontaktit" style="width:84px; height:300px">
					</div>
					<div class="span4" id="provisio" style="width:84px; height:300px">
					</div>
				</div>
				<div class="row-fluid">					
					<div class="span4">
						<p>Myynti</p>
						<p><%= @sales_today %> €</p>
					</div>
					<div class="span4">
						<p>Kontaktit</p>
						<p><%= @contacts_today %> kpl </p> 
					</div>
					<div class="span4">
						<p>Provisio</p>
						<p><%= @provisio_today %> €</p>
					</div>
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="myyntikk">
				
			</div>
		</div>
		<div class="span4">
			<div class="osaamisluvut">
				<p>osaamisluvut</p>
			</div>
		</div>
	</div>	
</div>
	 <script type="text/javascript">
$(function () {
	
    var d1 = [[0, <%= @sales_today %>]];
    var d1_tavoite = [[0, 1500]];
    var d2 = [[0, <%= @contacts_today %>]];
    var d3 = [[0, <%= @provisio_today %>]];
    
    $.plot($("#myynti"), [
    {	
    	data: d1,
    	bars: { show: true },
    	color: "#E01B1B"
    },
    {	
    	data: d1_tavoite,
    	bars: { show: true },
    	color: "#D0E01B"
    }
    ], {
    	xaxis: {
    		show: false
    	},
    	
    	yaxis: {
    		ticks: 10,
    		min: 0,
    		max: 2000,
    	}
    });
    
    $.plot($("#kontaktit"), [
    {	
    	data: d2,
    	bars: { show: true },
    	color: "#222"
    }
    ], {
    	xaxis: {
    		show: false
    	},
    	
    	yaxis: {
    		ticks: 10,
    		min: 0,
    		max: 60,
    	}
    });
    
    $.plot($("#provisio"), [
    {	
    	data: d3,
    	bars: { show: true },
    	color: "#111"
    }
    ], {
    	xaxis: {
    		show: false
    	},
    	
    	yaxis: {
    		ticks: 10,
    		min: 0,
    		max: 500,
    	}
    });
     
});
</script>
