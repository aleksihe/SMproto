<%= render 'esimies_shared/vasenpalkki' %>
<div class="span10">
	<div class="row-fluid" id="myyjat">
	<div class= "row">
		<div class="span 4 offset4"><h4>Myyjät</h4></div>
	</div>
		<div class="span5">
			<%= render 'esimies_shared/myyja_form' %>
		</div>
	
		<div class="span6">
			<% if @myyjat.any? %>
			<table class="table table-condensed table-bordered">
				<colgroup>
		          <col class="span6">
		          <col class="span1">		         
		        </colgroup>
				<thead>
					<tr>
						<th>Myyjä</th><th></th> 
					</tr>	
				</thead>
				<% @myyjat.each do |myyja| %>
					<tr>
						<td><%= myyja.nimi %></td>						
						<td><%= link_to image_tag( "roskis.jpg", alt: "delete"), myyja, method: :delete,  data: { confirm: "Oletko varma?" } %></td>
					</tr> 
				<% end %>
			</table>	
			<% end %>
		</div>
	</div>
	
	<div class="row-fluid" id="myyjaryhmat">
	<div class= "row">
		<div class="span 4 offset4"><h4>Myyjäryhmät</h4></div>
	</div>
		<div class="span5">
		<%= form_for(@salegroup) do |f| %>
			<%= f.label :nimi %>
			<%= f.text_field :nimi %>
		
			<%= f.submit "Luo myyjäryhmä", class: "btn btn-inverse" %>
		<% end %>
		</div>
		<div class="span6">
			<% if @salegroups.any? %>
			<table class="table table-condensed table-bordered">
				<colgroup>
		          <col class="span7">
		          <col class="span1"
		        </colgroup>
				<thead>
					<tr>
						<th>Myyjäryhmä</th><th></th>
					</tr>	
				</thead>
				<% @salegroups.each do |salegroup| %>
					<tr>
						<td><%= salegroup.nimi %></td>
						<td><%= link_to image_tag( "roskis.jpg", alt: "delete"), salegroup, method: :delete,  data: { confirm: "Oletko varma?" } %></td>
					</tr> 
				<% end %>
			</table>	
			<% end %>
		</div>
	</div>
</div>