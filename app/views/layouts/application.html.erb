<!DOCTYPE html>
<html>
  <head>
    <title>SaleMate prototyyppi</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
  	<div class="container-fluid">
	  <div class="row-fluid">	
	  	<div class="span12">
		  	<div id="header">
		  		<% if signed_in? %>
				  <p><font color="#800517" font-style="italic"><%= current_user.nimi %> </font></p>
				<% end %>		  		
		  	</div>
		</div>
	  </div>
	  <div class="row-fluid">	
	  	<div class="span1">
		  	<div id="vasenraami">
			</div>
		</div>
		<div class="span11">
		  <div class="row-fluid">	
		      <%= yield %> 
		      
	      </div>
		</div>    
	  </div>
	  <div class="row-fluid">
	    <div class="span12">
		    <div id="footer">
		    <% if signed_in? %>	
		    	<% if current_user.esimies == true %>    	
		    	<h2><%= link_to "SaleMate", esimies_main_path %></h2>
		    	<% else %>
		    	<h2><%= link_to "SaleMate", myyja_main_path %></h2>
		    	<% end %>
		    <% else %>
		    	<h2>SaleMate</h2>
		    <% end %>	
			</div> 
			<div class="debug">
		      <%= debug(params) if Rails.env.development? %>
		      </div> 
		</div>
	  </div>
	 </div>
	</body>
</html>