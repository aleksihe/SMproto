<!DOCTYPE html>
<html>
  <head>
    <title>SaleMate prototyyppi</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
    <script type="text/javascript" src="https://livezhat.zef.fi/administer/livezhat.php"></script>
  </head>
  <body>
  	<div class="container-fluid">
	  <div class="row-fluid">	
	  	<div class="span12">
		  	<div id="header">
		  		<% if signed_in? %>
				  <p><font color="#800517" font-style="italic"><%= current_user.nimi %> </font></p>
				<% end %>		  		
		  	</div>
		</div>
	  </div>
	  <div class="row-fluid">	
	  	<div class="span1">
		  	<div id="vasenraami">
			</div>
		</div>
		<div class="span11">
		  <div class="row-fluid">	
		<%if browser.ie? %>
		<p> Ohjelmisto ei tue Internet Explorer selainta. Tuetut selaimet: Google Chrome, Mozilla Firefox ja Opera. Suositus: Google Chrome</p>
		<% else %>
		      <%= yield %> 
		      <% end %>
		      
	      </div>
		</div>    
	  </div>
	  <div class="row-fluid">
	    <div class="span12">
		    <div id="footer">
		    <% if signed_in? %>	
		    	<% if current_user.esimies == true %>    	
		    	<h2><%= link_to "SaleMate", esimies_main_path %></h2>
		    	<% else %>
		    	<h2><%= link_to "SaleMate", myyja_main_path %></h2>
		    	<% end %>
		    <% else %>
		    	<h2>SaleMate</h2>
		    <% end %>	
			</div> 
			<div class="debug">
		      <%= debug(params) if Rails.env.development? %>
		      </div> 
		</div>
	  </div>
	 </div>
	 <% path = request.path %>
	 <div class="page_info">	 		
	 		<% if path == "/" %>
	 			<%= render 'page_info/aloitussivu'%>
	 		<% elsif path == "/esimies_main" %>
	 			<%= render 'page_info/esimies_main'%>
	 		<% elsif path == "/kokonaismyynti" %>
	 			<%= render 'page_info/kokonaismyynti'%>
	 		<% elsif path == "/myyntiryhmat" %>
	 			<%= render 'page_info/myyntiryhmat'%>
	 		<% elsif path == "/kontaktit" %>
	 			<%= render 'page_info/kontaktit'%>
	 		<% elsif path == "/competitions" %>
	 			<%= render 'page_info/competitions'%>
	 		<% elsif path == "/goals/new" %>
	 			<%= render 'page_info/goals_new'%>
	 		<% elsif path == "/competitions_new" %>
	 			<%= render 'page_info/competitions_new'%>
	 		<% elsif path == "/myyjahallinta" %>
	 			<%= render 'page_info/myyjahallinta'%>
	 		<% elsif path == "/tuotehallinta" %>
	 			<%= render 'page_info/tuotehallinta'%>
	 		<% elsif path == "/bonuslevels/new" %>
	 			<%= render 'page_info/bonuslevels_new'%>
	 		<% elsif path == "/myyja_main" %>
	 			<%= render 'page_info/myyja_main'%>
	 		<% elsif path == "/kilpailut" %>
	 			<%= render 'page_info/kilpailut'%>						
	 		<% end %>		 	
	 </div>
	<% if path == "/" %>
	<div class="page_teoria">
		<%= render 'page_teoria/aloitussivu'%>
	</div>	
	<% elsif path == "/goals/new"%>
	<div class="page_teoria">
		<%= render 'page_teoria/tavoitteet'%>
	</div>
	<% elsif path == "/competitions_new"%>
	<div class="page_teoria">
		<%= render 'page_teoria/competitions_new'%>
	</div>	
	<% elsif path == "/myyja_main"%>
	<div class="page_teoria">
		<%= render 'page_teoria/myyja_main'%>
	</div>
	<% elsif path == "/kilpailut"%>
	<div class="page_teoria">
		<%= render 'page_teoria/competitions_new'%>
	</div>	
	<% end %>			 
	</body>
</html>